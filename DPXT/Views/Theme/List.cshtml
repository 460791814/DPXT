@using Model;
@{

    ViewBag.Title = "";
    Layout = "~/Views/Share/_LayOut.cshtml";
}
<script src="~/Skins/artDialog/dist/dialog.js"></script>
<script src="~/Skins/artDialog/dist/dialog-plus.js"></script>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                点评主题列表
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row form-inline">
                    <div class="form-group" style="margin:0 0 15px 15px">

                        <button type="button" class="btn btn-primary" onclick="update(0)">添加</button>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>主题名称</th>

                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var list = ViewBag.list as List<E_Theme>;
                            foreach (var item in list)
                            {
                                <tr>
                                    <td>@item.themeid</td>
                                    <td>@item.themename</td>

                                    <td><a href="javascript:void(0)" onclick="update(@item.themeid)">编辑</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="javascript:void(0)" onclick="del(@item.themeid)">删除</a></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
                <!-- /.table-responsive -->
                <div class="row">
                    <div style="text-align: center">
                        @Html.Raw(ViewBag.page)
                    </div>

                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



<script>

    function del(id)
    {
        if (!confirm("确认删除？")) {
            return false;
        }

        var data = "themeid=" + id
        //ajax
        $.post("/Theme/Delete", data, function (data) {
            if (data == "True") {
                window.location.reload();

            } else {
                //消息
                dialog({
                    title: "失败",
                    content: '删除失败！'
                }).show();
            }
        });

        return false;


    }
    function update(id) {
        var d = dialog({
            title: '编辑',
            url: '/Theme/Info?id=' + id,
            id: 'id-info',

        });
        d.showModal();
    }

</script>
