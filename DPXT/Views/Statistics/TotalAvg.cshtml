@using Model;
@using Model.Statistics;
@{
    ViewBag.Title = "综合平均统计";
    Layout = "~/Views/Share/_LayOut.cshtml";
}
<script src="~/Skins/artDialog/dist/dialog.js"></script>
<script src="~/Skins/artDialog/dist/dialog-plus.js"></script>
<!-- /.row -->
<div class="row">

    <div class="col-lg-12">
        <h1 class="page-header">综合平均统计</h1>
    </div>

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                综合平均统计
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row form-inline">
                    <div class="form-group" style="margin:0 0 15px 15px">
                        <button type="button" class="btn btn-primary">添加</button>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>评价维度</th>
                            <th>调查问项</th>
                            <th>期望值（E）</th>
                            <th>感知值（P）</th>
                            <th>差值（P-E）</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var itemtotallist = ViewBag.itemtotallist as List<E_ItemTotal>;
                            foreach (var item in itemtotallist)
                            {
                                <tr>
                                    <td>@item.typename</td>
                                    <td>@item.title</td>
                                    <td>@item.sumexpect</td>
                                    <td>@item.sumreal</td>
                                    <td>@item.sumdifferent</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <h2>汇总统计</h2>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>评价维度</th>
                            <th>期望（E）均值</th>
                            <th>感知（P）均值</th>
                            <th>差值（P-E）均值</th>
                            <th>期望偏离度（（P-E）/E*100%）</th>
                            <th>顾客满意度（期望偏离度+100%）</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var itemtotalavglist = ViewBag.itemtotalavglist as List<E_ItemTotalAvg>;
                            foreach (var item in itemtotalavglist)
                            {
                                <tr>
                                    <td>@item.typename</td>
                                    <td>@item.avgexpect</td>
                                    <td>@item.avgreal</td>
                                    <td>@item.avgdifferent</td>
                                    <td>@item.expectdeviation*100%</td>
                                    <td>@item.satisfaction*100%</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script type="text/javascript">

</script>
