@using Model;
@using Model.Statistics;
@{
    ViewBag.Title = "综合平均统计";
    Layout = "~/Views/Share/_LayOut.cshtml";
}

<link href="/skins/admin/vendor/datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="/skins/admin/vendor/datetimepicker/js/bootstrap-datetimepicker.js"></script>

<!-- /.row -->
<div class="ng-scope">
    <div class="row ng-scope">
        <div class="col-lg-12 col-md-12 col-sm-12">

            <!--标题-->
            <h1 class="page-header">综合平均统计</h1>

            <!--操作-->
            <div class="form" style="padding-bottom:10px;">
                <div class="form-inline">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"> 作业区 </span>
                            <select class="form-control ng-pristine ng-valid ng-empty ng-touched ng-untouched" >
                                <option value="" class="" selected="selected">请选择作业区 </option>
                                <option label="小学" value="number:2">小学</option>
                                <option label="初中" value="number:4">初中</option>
                                <option label="高中" value="number:8">高中</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"> 班组 </span>
                            <select class="form-control ng-pristine ng-valid ng-empty ng-touched ng-untouched" >
                                <option value="" class="" selected="selected">请选择班组 </option>
                                <option label="小学" value="number:2">小学</option>
                                <option label="初中" value="number:4">初中</option>
                                <option label="高中" value="number:8">高中</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">统计日期</span>
                            <div class='input-group date inputtime'>
                                <input type='text' class="form-control" id='starttime' />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            至
                            <div class='input-group date inputtime'>
                                <input type='text' class="form-control" id='endttime' />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" data-toggle="modal" ><i class="fa fa-search"></i>查询 </button>
                    </div>
                    <div class="form-group pull-right">
                        <button class="btn btn-info" data-toggle="modal" onclick="csvExporter().exportTable('dataTable','组织机构')"><i class="fa fa-cloud-download"></i>导出 </button>
                    </div>
                </div>
            </div>

            <!--内容-->
            <div class="panel panel-default">
                <div class="panel-heading">
                    综合统计
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>评价维度</th>
                                <th>调查问项</th>
                                <th>期望值（E）</th>
                                <th>感知值（P）</th>
                                <th>差值（P-E）</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var itemtotallist = ViewBag.itemtotallist as List<E_ItemTotal>;
                                foreach (var item in itemtotallist)
                                {
                                    <tr>
                                        <td>@item.typename</td>
                                        <td>@item.title</td>
                                        <td>@item.sumexpect</td>
                                        <td>@item.sumreal</td>
                                        <td>@item.sumdifferent</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    综合平均统计
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>评价维度</th>
                                <th>期望（E）均值</th>
                                <th>感知（P）均值</th>
                                <th>差值（P-E）均值</th>
                                <th>期望偏离度（（P-E）/E*100%）</th>
                                <th>顾客满意度（期望偏离度+100%）</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var itemtotalavglist = ViewBag.itemtotalavglist as List<E_ItemTotalAvg>;
                                foreach (var item in itemtotalavglist)
                                {
                            <tr>
                                <td>@item.typename</td>
                                <td>@item.avgexpect</td>
                                <td>@item.avgreal</td>
                                <td>@item.avgdifferent</td>
                                <td>@item.expectdeviation*100%</td>
                                <td>@item.satisfaction*100%</td>
                            </tr>
                        }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".inputtime").datetimepicker({
            minView: "month",//设置只显示到月份
            format: "yyyy-mm-dd",//日期格式
            autoclose: true,//选中关闭
            todayBtn: true,//今日按钮
            language: 'cn'
        });
    });
</script>
